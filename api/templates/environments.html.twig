{% extends "base.html.twig" %}

{% block title %}Environments{% endblock %}

{% block body %}

<div class="row">
  <div class="col-md-12">
    <form id="environments-filters" class="dataTableFilters form-inline">
      <div class="form-group">
        <label class="form-label" for="filter-identifier">Identifier</label>
        <input class="form-control autocomplete" name="identifier" type="text" id="filter-identifier" placeholder="name" 
          autocomplete-source="/environments" autocomplete-group="Environment:identifier" autocomplete-name="identifier" />
      </div>
    </form>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table" id="environments"></table>
  </div>
</div>

{% endblock %}

{% block js %}

<script>

$(document).ready(function () {
  var dataTableOpts = commonDataTableOpts();
  dataTableOpts.ajax.url = '/environments';
  dataTableOpts.columns = [ 
    { data: 'id', title: 'ID' },
    { data: 'identifier', title: 'Identifier' },
    { data: 'assets', title: 'Assets', 'orderable': false, render: function(data, type, row, meta){ return data.length > 0 ?  data.length : 0; } },
  ];

  rogerInit('environments', dataTableOpts);
  
});

</script>

{% endblock %}