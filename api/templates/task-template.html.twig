{% extends "base.html.twig" %}

{% block title %}Task template{{ taskTemplate.identifier }}{% endblock %}

{% block body %}

<dl>

  <dt>Title</dt>
  <dd>{{ taskTemplate.title }}</dd>

  <dt>Description</dt>
  <dd>{{ taskTemplate.description }}

  {% if taskTemplate.taskWorkflow is not null %}
    <dt>Workflow</dt>
    <dd>{{ taskTemplate.taskWorkflow.workflow | json_encode }}</dd>
  {% endif %}
</dl>

{% endblock %}
