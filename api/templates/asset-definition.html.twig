{% extends "base.html.twig" %}

{% block title %}Asset Definition{% endblock %}

{% block body %}

<div class="row">
	<div class="col-md-12">
	    <h2>{{ assetDefinition.identifier }}</h2>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
	    <h3>Tags</h3>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
	    
	    <table class="table">
	      <thead><tr><th>Tag</th><th>Value</th></tr></thead>
	      <tbody id="instance-table">
	      	{% for attribute, value in assetDefinition.tags %}
	      		<tr>
	      			<td>{{ attribute }}</td>
	      			<td>{{ value }}</td>
	      		</tr>
	      	{% endfor %}
	      </tbody>
	    </table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
	    <h3>Labels</h3>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
	    <table class="table">
	      <thead><tr><th>Label</th><th>Value</th></tr></thead>
	      <tbody id="instance-table">
	      	{% for label, value in assetDefinition.labels %}
	      		<tr>
	      			<td>{{ label }}</td>
	      			<td>{{ value }}</td>
	      		</tr>
	      	{% endfor %}
	      </tbody>
	    </table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
	    <h3>Relations</h3>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
	    
	    <table class="table">
	      <thead><tr><th>ID</th><th>Type</th><th>Identifier</th><th>Source</th></tr></thead>
	      <tbody id="instance-table">
	      	{% for relation in assetDefinition.relationsFrom %}
	      		<tr>
	      			<td>{{ relation.id }}</td>
	      			<td>{{ relation.name }}</td>
	      			<td><a href="/ui/asset_definitions/{{ relation.assetDefinitionTo.identifier }}">{{ relation.assetDefinitionTo.identifier }}</a></td>
	      			<td>{{ relation.source.name }}</td>
	      		</tr>
	      	{% endfor %}
	      </tbody>
	    </table>
	</div>
</div>

{% endblock %}

{% block js %}

<script>

$(document).ready(function () {
  $('.renderBool').each(function() {
  	let val = $(this).html();
  	$(this).html(renderBool(val === '1'));
  });
  
});

</script>

{% endblock %}