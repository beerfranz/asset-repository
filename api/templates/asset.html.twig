{% extends "base.html.twig" %}

{% block title %}Asset{% endblock %}

{% block body %}

<div class="row">
	<div class="col-md-12">
	    <h3>Labels</h3>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
	    <table class="table">
	      <thead><tr><th>Label</th><th>Value</th></tr></thead>
	      <tbody id="instance-table">
	      	{% for label, value in asset.labels %}
	      		<tr>
	      			<td>{{ label }}</td>
	      			<td>{{ value }}</td>
	      		</tr>
	      	{% endfor %}
	      </tbody>
	    </table>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
	    <h3>Instances</h3>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
	    
	    <table class="table">
	      <thead><tr><th>ID</th><th>Identifier</th><th>Version</th></tr></thead>
	      <tbody id="instance-table">
	      	{% for instance in asset.instances %}
	      		<tr>
	      			<td>{{ instance.id }}</td>
	      			<td>{{ instance.identifier }}</td>
	      			<td>{{ instance.version }}</td>
	      		</tr>
	      	{% endfor %}
	      </tbody>
	    </table>
	</div>
</div>

{% endblock %}
